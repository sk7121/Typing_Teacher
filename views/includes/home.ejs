            <form action="/free_hand" method="get">
                <button class="btn" style="border: none;">
                    <div class="box"
                        style="background-image: url('https://img.freepik.com/premium-photo/male-hand-holds-keyboard-light-isolated_164357-1842.jpg?semt=ais_hybrid&w=740'); background-position: center;color: rgb(204, 169, 196);">
                        <h2>Free Hand Typing</h2>
                    </div>
                </button>
            </form>

        </div>
    </div>

