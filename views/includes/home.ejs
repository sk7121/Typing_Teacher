            </form>

            <form action="/games" method="get">
                <button class="btn" style="border: none;">
                    <div class="box"
                        style="background-image: url('https://media.istockphoto.com/id/1320799591/vector/game-on-neon-game-controller-or-joystick-for-game-console-on-blue-background.jpg?s=612x612&w=0&k=20&c=CbxRq6ctP5Ta1QLu18UMtvgJf4D-zFpTMm0Rz14_Gy0='); background-position: center;color: rgb(204, 169, 196);">
