    <div class="container">


        <div class=" boxes top">
            <form action="">
                <button class="btn" style="border: none;">
                    <div class="box"
                        style="background-image: url('https://img.freepik.com/free-photo/learning-education-ideas-insight-intelligence-study-concept_53876-120116.jpg?semt=ais_hybrid&w=740'); background-position: center; color: rgb(204, 169, 196);">
